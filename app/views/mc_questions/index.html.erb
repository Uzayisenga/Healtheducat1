<h1>Multiple Choice Questions</h1>

<% questions.each do |question| %>
    <div id="<%= dom_id(question) %>">
        <p><%= question.question %></p>

        <%
        choices = [question.answer, question.distractor_1, question.distractor_2, question.distractor_3]
        choices.each do |c|
        %>
        <div>
            <%= radio_button_tag "guess_#{question.id}", c, checked = c == question.answer, disabled: true %>
            <%= label_tag "guess_#{question.id}_#{c}", c %>
        </div>

        <% end %>
    </div>
<% end %>

<%= link_to 'New Question', new_quiz_mc_question_path(@quiz, @mc_question) %>
